
<div class="container-fluid">

  <div class="row">
    <div class="col-md-10">

    <br>

    <div class="row">
      <% @products.each do |product|%>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <div class="text-center">
            <% if product.image.present? %>
            <%= link_to image_tag(product.image.url(:thumb)), admin_product_path(product) %> 
            <% else %>
            <%= link_to image_tag($DEFAULT_THUMB_IMAGE), admin_product_path(product) %> 
            <% end %>
            
          </div>              
          
          <div class="caption text-left">
            <h4><%= link_to product.title, product_path(product) %></h4>
            <p><%= simple_format(product.description) %></p>
            <%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-sm btn-primary"%>
            <%= link_to "下架", "#", method: :post, class: "btn btn-sm btn-warning", data: { confirm: "确认下架产品？"}%>
            <%= link_to "删除", admin_product_path(product), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "确认删除产品？"}%>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>

  <div class="col-md-2">
    <%= link_to("发布新的产品", new_admin_product_path, class:"btn btn-success pull-left btn-lg", style: "margin-top: 20px") %>
  </div>
  </div>

  



</div>

