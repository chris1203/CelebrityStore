<div class="section">


        <div class="section__content clearfix">

        <% @products.each do |product|%>

          <div class="card effect__hover">

            <div class="card__front">
            	<%= render partial: "common/product_image", locals: {product: product, size: "thumb"} %>
            </div>

            <div class="card__back">

                <h3 class="card_title"><%= product.title %></h3>

                  <div class="card__text">
               <%= link_to product.description, product_path(product), style:"text-decoration: none" %>
             </div>
            </div>
          </div>

        <% end %>
        </div><!-- /card -->





        <div class="section__content clearfix">
          <div class="row">
          	<div class="col-md-6">
          		   <%= image_tag("http://placehold.it/640x312.5",class:"promo_image")%>
          	    </div>
          	    	<div class="col-md-6">
                     <%=  image_tag("http://placehold.it/640x312.5",class:"promo_image")%>
                   </div>

        </div><!-- /card -->
