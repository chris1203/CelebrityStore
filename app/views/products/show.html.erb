<br>
<br>

<div class="container">


	<div class="col-md-4">

		<br><br>
		<%= render partial: "common/product_image", locals: {product: @product, size: "medium", only_image: true} %>	
	</div>

	<div class="col-md-4 col-md-offset-1">
		<h2><%= simple_format(@product.title) %></h2>	
		<br>
		<h3>库存</h3><%= @product.quantity %>
		<h3>描述</h3><%= simple_format(@product.description) %>
		<br><br>
		<%= render "common/add_to_cart_button" %>
	</div>

	<div class="col-md-3">
		<h3>其他服务</h3>
		<br>
		<div class="row">
			<% @other_products.each do |other_product| %>
			<div class="col-md-12">

				<%= render partial: "common/product_image", locals: {product: other_product, size: "thumb"} %>
				
				<br>	
				<%= link_to other_product.title, product_path(other_product), class: "pull-right" %>
				<br>
				<span class="pull-right"><%= other_product.price %></span>
				
				<br><br>
			</div>
			<% end %>
		</div>

	</div>

</div>



